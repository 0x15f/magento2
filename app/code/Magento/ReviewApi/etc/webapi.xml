<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <!-- Review Service -->
    <route url="/V1/create-reviews" method="POST">
        <service class="Magento\ReviewApi\Api\CreateReviewsInterface" method="execute"/>
        <resources>
            <resource ref="Magento_Review::reviews_all" />
        </resources>
    </route>
    <route url="/V1/update-reviews" method="POST">
        <service class="Magento\ReviewApi\Api\UpdateReviewsInterface" method="execute" />
        <resources>
            <resource ref="Magento_Review::reviews_all" />
        </resources>
    </route>
    <route url="/V1/get-reviews" method="POST">
        <service class="Magento\ReviewApi\Api\GetReviewsInterface" method="execute"/>
        <resources>
            <resource ref="Magento_Review::reviews_all" />
        </resources>
    </route>
    <route url="/V1/delete-reviews" method="POST">
        <service class="Magento\ReviewApi\Api\DeleteReviewsInterface" method="execute"/>
        <resources>
            <resource ref="Magento_Review::reviews_all" />
        </resources>
    </route>
</routes>
